// Links hover state helper
//

a
  color: $link-clr
  text-decoration: none
  transition: $transition-property $transition-duration $transition-easing
  +hover-state()
    color: $link-hover-clr
    text-decoration: $link-hover-decoration


// Direction
//
// Set properties of direction arrows links
// Global styles
.direction
  display inline-block
  border-radius: 50%;
  box-shadow 0px 0px 10px 0px rgba(0,0,0, 0.1)
  transition transform $transition-duration $transition-bounce
  +hover-state()
    transform: scale(1.5)
