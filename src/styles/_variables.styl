// General variable structure
//
// Variable format should follow the `$component-modifier-state-property` order.
// It's for an unvariable time prefixed with `` for avoids conflicts with actual Praditus website.


// Spacing
//
// Control the default margins and paddings easily

$spacer       = 2.5rem      // 40px
$spacer-x     = ($spacer/4) // 10px
$spacer-y     = ($spacer/4) // 10px
$border-width = .0625rem    // 1px


// Colors
//
// Praditus brand colors

$clr-primary        = #3AB4F0

$clr-darker         = #3D3D3D
$clr-base           = #86888B
$clr-light          = #F8F9F9
$clr-lighter        = #fff

$clr-error          = FireBrick



// Body
//
// Settings for the `<body>` element.

$body-bkg = $clr-lighter


// Links
//
// Style anchor elements.

$link-clr              = $clr-darker
$link-hover-clr        = $clr-primary
$link-hover-decoration = none


// Typography
//
// Font, line-height, and color for body text, headings, and more.

$txt-clr-base        = $clr-darker
$txt-muted           = $clr-light

$ff-common           = "Merriweather", Georgia, serif
$ff-emphasis         = "Source Sans Pro", "Helvetica Neue", Helvetica, Arial, sans-serif

$fs-root             = 16px

$lh                  = 1.15

$fs-base             = 1rem
$fs-lg               = 1.125rem
$fs-sm               = .75rem
$fs-xs               = .625rem

$fs-h1               = 4.375rem
$fs-h2               = 2rem
$fs-h3               = 1.5625rem
$fs-h4               = 1.5rem
$fs-h5               = 1.375rem
$fs-h6               = 1.25rem

$fs-lead             = 2.625rem

$heading-bkg         = transparent
$headings-mrg-bottom = ($spacer / 2)
$headings-ff-base    = $ff-emphasis
$headings-lh         = $lh
$headings-clr        = inherit

$hr-border-clr       = $clr-base
$hr-border-width     = $border-width


// Components
//
// Define common padding and border radius sizes and more.

$lh-lg               = (4/3)
$lh-sm               = 1.5

$border-radius       = 4px
$border-radius-lg    = $border-radius
$border-radius-sm    = $border-radius

$transition-property = all
$transition-duration = .250s
$transition-easing   = ease


// Grid breakpoints
//
// Define the minimum and maximum dimensions at which your layout will change,
// adapting to different screen sizes, for use in media queries.
//
// xs - Extra small screen, phone
// sm - Small screen, phone
// md - Medium screen, tablet
// lg - Large screen, desktop
// xl - Extra large screen, wide desktop

breakpoints = {
    xs: 0,
    sm: 320px,
    md: 460px,
    lg: 980px,
    xlg: 1280px
}


// Grid containers
//
// Define the maximum width of `.container` for different screen sizes.

$container-max-width = 1200px


// Grid columns
//
// Set the number of columns and specify the width of the gutters.

$grid-columns = 24
$grid-gutter  = 20px

$grid-row-classname   = 'row'
$grid-cell-classname  = 'col'


// Navigation
//
// Font Style
$nav-link-ff               = $ff-emphasis

// Colors
$nav-link-clr              = $clr-base
$nav-link-hover-clr        = $clr-darker
$nav-link-hover-decoration = none


// Buttons
//
// For each buttons, define text, background and border color.
$btn-pdg-x            = 1.875rem
$btn-pdg-y            = .625rem

$btn-ff               = $ff-emphasis
$btn-fs               = .75rem

$btn-primary-clr      = $clr-lighter
$btn-primary-bkg      = $clr-primary
$btn-primary-border   = $btn-primary-bkg

$btn-secondary-clr    = $clr-primary
$btn-secondary-bkg    = $clr-lighter
$btn-secondary-border = $btn-secondary-bkg

$btn-pdg-x-sm         = .75rem
$btn-pdg-y-sm         = .25rem

$btn-pdg-x-lg         = 1.875rem
$btn-pdg-y-lg         = 1.125rem

// Allows for customizing button radius independently from global border radius
$btn-border-radius    = $border-radius
$btn-border-radius-lg = $border-radius-lg
$btn-border-radius-sm = $border-radius-sm


// Forms
//
$input-pdg-x                    = 1.875rem
$input-pdg-y                    = .625rem
$input-boder-width              = $border-width

$input-ff                       = $ff-common

$input-bkg                      = $clr-lighter
$input-bkg-disabled             = $clr-light

$input-clr                      = $txt-clr-base
$input-border                   = $clr-base
$input-box-shadow               = none

$input-border-radius            = $border-radius
$input-border-radius-lg         = $border-radius-lg
$input-border-radius-sm         = $border-radius-sm

$input-border-focus             = #66afe9
$input-box-shadow-focus         = rgba(102,175,233,.6)

$input-clr-placeholder          = $txt-clr-base

$input-pdg-x-sm                 = .75rem
$input-pdg-y-sm                 = .275rem

$input-pdg-x-lg                 = 1.875rem
$input-pdg-y-lg                 = 1.125rem

$input-height                   = (($fs-base * $lh) + ($input-pdg-y * 2) + ($border-width * 2))
$input-height-lg                = (($fs-lg * $lh-lg) + ($input-pdg-y-lg * 2) + ($border-width * 2))
$input-height-sm                = (($fs-sm * $lh-sm) + ($input-pdg-y-sm * 2) + ($border-width * 2))

$form-group-mb                  = 1.25rem

$input-group-addon-bkg          = $clr-primary
$input-group-addon-border-color = darken($clr-primary, 10%)

$cursor-disabled                = not-allowed