// Homepage content specifics styles
//

+bp-min(lg)
	.is-homepage .siteHeader
		background-color transparent
		box-shadow none


.is-homepage

	.introduction
		padding-top 13vh

	.introduction-content
		color lighten($clr-primary, 80%)

		&::after
			content: ""
			display block
			margin ($spacer-y + 1.625rem) auto 4rem
			width 6.25rem // 100px
			height .25rem // 4px
			background-color $clr-lighter

	.siteHeader.contrast
		.siteNavigation
			.btn-link
				color $nav-link-clr-contrast
				transition border 0.4s ease

				+hover-state()
					border-bottom 1px solid rgba(0,0,0,.33)

			.siteNavigation-ctaContainer
					.btn.btn-primary
						background-color $clr-darker

						+hover-state()
							background-color darken($clr-darker, 25%)
							border-color darken($clr-darker, 25%)


		.siteLogo
			fill $clr-lighter


// "Stand for" icons
//

.standFor,
.standFor-item
	display block
	margin-bottom $spacer

.standFor-item
	+hover-state()
		.standFor-figure
			transform scale(1.125)

.standFor-figure
	width 100%
	height 134px
	line-height 134px
	text-align center
	transition all $transition-duration $transition-bounce

.standFor-title
	margin 0 auto
	width 60%
