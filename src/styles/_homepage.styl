// Homepage content specifics styles
//

.is-homepage

  .introduction
    padding-top 13vh

  .introduction-content
    color lighten($clr-primary, 80%)

    &::after
      content: ""
      display block
      margin ($spacer-y + 1.625rem) auto 4rem
      width 6.25rem // 100px
      height .25rem // 4px
      background-color $clr-lighter

  .siteHeader.contrast
    .siteNavigation
      .btn-link
        color $nav-link-clr-contrast
        transition border 0.4s ease

        +hover-state()
          border-bottom 1px solid white

      .siteNavigation-ctaContainer
          .btn.btn-primary
            border 1px solid white

            +hover-state()
              background-color darken($clr-primary, 10%)


    .siteLogo
      fill $clr-lighter


// "Stand for" icons
//

.standFor,
.standFor-item
  display block
  margin-bottom $spacer

.standFor-item
  +hover-state()
    .standFor-figure
      transform translateY(-10px)

.standFor-figure
  width 100%
  height 134px
  line-height 134px
  text-align center
  transition all $transition-duration $transition-bounce

.standFor-title
  margin 0 auto
  width 70%
