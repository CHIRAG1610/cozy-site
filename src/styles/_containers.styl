// Containers tags
//
// Apply styles to html, body and main containers classes

body
  // padding-top .938rem
  font-family: $ff-common
  font-size: $fs-base
  line-height: $lh
  color: $txt-clr-base
  background-color: $body-bkg


.main
  margin-bottom $spacer

.introduction
  padding-top (.938rem + 3.375rem + $spacer) // top header margin + header height + default margin


// Contrast mode
//
// .contrast class is on body
.contrast
  .introduction
  .introduction-title
    color: $txt-clr-base-contrast

  .introduction
    padding-top 40vh
    height 100vh