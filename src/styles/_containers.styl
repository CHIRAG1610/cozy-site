// Containers tags
//
// Apply styles to html, body and main containers classes

body
  padding-top .938rem
  font-family: $ff-common
  font-size: $fs-base
  line-height: $lh
  color: $txt-clr-base
  background-color: $body-bkg

  &.contrast
    background $body-bkg url(../images/bkg-ungoogleyourlife.jpg) no-repeat
    background-size contain


.main
  margin-bottom $spacer


// Contrast mode
//
// .contrast class is on body
.contrast
  .introduction
  .introduction-title
    color: $txt-clr-base-contrast

  .introduction
    height 100vh