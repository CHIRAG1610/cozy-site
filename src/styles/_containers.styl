// Containers tags
//
// Apply styles to html, body and main containers classes

body
  // padding-top .938rem
  font-family: $ff-common
  font-size: $fs-base
  line-height: $lh
  color: $txt-clr-base
  background-color: $body-bkg

  &.is-introductionFullHeight

    .introduction
      padding-top 40vh
      height 100vh


.main
  margin-bottom $spacer

// Default introduction panel
//
// ex: homepage
.introduction
  padding-top (.938rem + 3.375rem + $spacer) // top header margin + header height + default margin


// Full width block
//
// Set padding and barckground colors
.panel
  padding ($spacer * 1.5) 0

  &.onBlack
    background-color #000

  &.onPurple
    background-color #7588E0

  &.onLightblue
    background-color #F1F4FF