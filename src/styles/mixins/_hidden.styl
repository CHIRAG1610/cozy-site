// Hide responsively
//
// Hidden from minimum breakpoint
hidden-min($breakpoints = $grid-breakpoints)
  for $bp, $value in breakpoints
    @media (min-width: ($value + 1px))
      .hidden-from-{$bp}
        display none !important
        visibility hidden !important

// Hidden to maximum breakpoint
hidden-max($breakpoints = $grid-breakpoints)
  for $bp, $value in breakpoints
    @media (max-width: $value)
      .hidden-to-{$bp}
        display none !important
        visibility hidden !important