// Button sizes
//

button-size($pdg-y, $pdg-x, $font-size, $font-weight, $line-height, $border-radius)
  padding: $pdg-y $pdg-x
  font-size: $font-size
  font-weight: $font-weight
  line-height: $line-height
  border-radius: $border-radius


// Button variants
//

button-colors($clr, $bkg, $border)
  color: $clr
  background-color: $bkg
  border-color: $border
  transition: all $transition-duration $transition-easing
  +hover-state()
    color: $clr
    background-color: darken($bkg, 30%)
    border-color: darken($bkg, 30%)

button-outlined-colors($clr, $border)
  color: $clr
  background-color: transparent
  border-color: $border
  transition: all $transition-duration $transition-easing
  +hover-state()
    color: darken($clr, 30%)
    border-color: darken($border, 30%)