// Drop caps
//
dropcaps($font-family, $font-size, $color)
  p:first-child:first-letter
    float left
    margin-top -(($font-size - 1.25rem) / 3)
    padding 12px 6px 0 0
    font-family $font-family
    font-size ($font-size - 1.25rem)
    font-weight $fw-bold
    line-height $font-size
    color $color
  +bp-min(lg)
    p:first-child:first-letter
      margin-top -($font-size / 3)
      padding 8px 12px 0 0
      font-size $font-size