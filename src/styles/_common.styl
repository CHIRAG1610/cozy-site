// Common styles for landing pages
//


// Colorschemes
//
// Set specifics colors of each landing pages
// by using target classes on main container
.ungoogleYourLife
  .introduction
    background url(../images/bkg-ungoogleyourlife@2x.jpg) no-repeat 50% 100% / cover
  .hangs
    background-color #000
  .features
    background-color #7588E0
  .featuresList-item-link
    &.active
      .featuresList-item-link-icon
        fill: #7588E0
  .landingCTA
    background-color #F1F4FF
    .panel-lead
      color: $clr-primary


// Introduction
//
.introduction-content
  text-align center

.introduction-goTo
  position absolute
  bottom 5vh
  width 100%
  text-align center


// Panels
//
.panel-title,
.panel-lead
  margin-left auto
  margin-right auto

.panel-title
  max-width 37.5rem // 600px
  margin-bottom ($spacer * 1.5) // ~75px

  &.withLead
    margin-bottom ($spacer / 4) // ~12

.panel-lead
  max-width 12.5rem  // 200px


// Hangs list
//
// 2 columns list with icons for presentation hangs on a list
.hangs
  padding $spacer 0 0

.hangsList
  @extend .clearfix
  @extend .list-unstyled
  font-family $ff-emphasis

.hangsList-item
  float: left
  position relative
  margin-bottom ($spacer * 1.5)
  padding-left 50px
  width 50%

  .hangsList-item-icon
    position absolute
    top 5px
    left 0

  &:nth-child(even)
    padding-left 100px

    .hangsList-item-icon
      left 50px

  &:nth-child(odd)
    padding-right 50px


// Features list
//
// interactive features list
.features
  overflow hidden

.featuresList
  @extend .list-unstyled
  margin 0
  font-family $ff-emphasis

.featuresList-item
  position relative
  margin ($spacer - .625rem) 0
  margin-left $grid-gutter
  &::after
    content ""
    position absolute
    bottom -(($spacer - 0.625rem) / 2) - (0.938rem / 2) // half of item margin bottom - half of the component height
    left (2.813rem / 2) // 50% of icon size
    width .125rem
    height .938rem
    background-color $clr-lighter
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0
    &::after
      display none

.featuresList-item-link
  position relative
  display block
  padding-left 4.063rem // 65px
  line-height $lh-sm
  color $clr-lighter !important
  +hover-state()
    .featuresList-item-link-icon
      background-color: rgba(255,255,255, 0.5)
  &.active
    .featuresList-item-link-icon
      background-color $clr-lighter


.featuresList-item-link-icon
  position absolute
  top 50%
  left 0
  transform translateY(-50%)
  width 2.813rem  // 45px
  height 2.813rem
  border $border-width solid $clr-lighter
  border-radius 100%
  fill $clr-lighter
  transition all $transition-duration $transition-easing
  // 0
  svg
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.featuresList-screenshots
  position relative

.featuresList-screenshotOutter
  position absolute
  top 0
  left 0
  right 0
  transform translateX(1000px)
  transition transform 1s cubic-bezier(.46,-0.47,.59,1.29)

  .featuresList-screenshot
    box-shadow 0px 0px 35px 0px rgba(0,0,0, 0.3)
    opacity 0
    transition opacity 1.5s $transition-easing

  &.active
    transform translateX(0)

    .featuresList-screenshot
      opacity 1


// Testimonials
//
// Present testimonials with portrait
.testimonialsItem
  display table
  width 100%

.testimonialsItem-figure,
.testimonialsItem-text
  display table-cell
  vertical-align middle

.testimonialsItem-text
  padding-left .938rem // 15px
  font-family $ff-emphasis
  line-height 1.25
  font-weight $fw-bold
  color: $clr-darker

  div
    padding-top .313rem
    font-family $ff-common
    font-size ($fs-sm - .063rem)
    font-weight $fw-regular
    color: $txt-clr-base


// CTA
//
// Panel with call to action title and button
.landingCTA
  .panel-title
    max-width 40.625rem // 650px
    font-size ($fs-h2 + .625rem) // 42px