// Common styles for landing pages
//


// Colorschemes
//
// Set specifics colors of each landing pages
// by using target classes on main container
// Ungoogle your life
.ungoogleYourLife
  .introduction
    color $clr-lighter
    background url(../images/bkg-ungoogleyourlife@2x.jpg) no-repeat 50% 100% / cover
  .hangs
    color $clr-lighter
    background-color #000
  .features
    background-color #7588E0
  .featuresList-item-link
    +hover-state()
      .featuresList-item-link-icon
        fill: #7588E0
  .landingCTA
    background-color #F1F4FF
    .panel-lead
      color: $clr-primary

// Connect my data
.connectMyData
  .introduction
    color $clr-lighter
    background url(../images/bkg-connectmydata@2x.jpg) no-repeat 50% 100% / cover
  .hangs
    color $clr-lighter
    background-color #00011D
  .features
    background-color #5AA885
  .featuresList-item-link
    +hover-state()
      .featuresList-item-link-icon
      .featuresList-item-link-icon *
        fill: #5AA885 !important
  .landingCTA
    background-color #F2F5F4

  dd
    margin-bottom 1.25rem

// Self hosting
.selfHosting
  .introduction
    color $clr-darker
    background url(../images/bkg-selfhosting.jpg) no-repeat 50% 100% / cover
  .hangs
    color $clr-darker
    background-color #F3F3F3
  .features
    background-color #0367AC
  .featuresList-item-link
    +hover-state()
      .featuresList-item-link-icon
      .featuresList-item-link-icon *
        fill: #0367AC !important
  .landingCTA
    background-color #F2F2F2


// Panels
//
.panel-title,
.panel-lead
  margin-left auto
  margin-right auto

.panel-title
  max-width 37.5rem // 600px
  margin-bottom ($spacer * 1.5) // ~75px

  &.withLead
    margin-bottom ($spacer / 4) // ~12

.panel-lead
  max-width 30rem  // 400px


// Hangs list
//
// 2 columns list with icons for presentation hangs on a list
.hangs
  padding $spacer 0 0

.hangsList
  @extend .list-unstyled
  display flex
  flex-wrap wrap
  font-family $ff-emphasis
  line-height $lh-sm

.hangsList-item
  display table
  margin-bottom ($spacer * 1.5)
  padding-left 0
  width 100%
  > div
    display table-cell
    vertical-align middle
  +bp-min(lg)
    padding-left 50px
    width 50%

  .hangsList-item-icon
    margin-right ($spacer / 2)


// Features list
//
// interactive features list
.features
  overflow hidden

.featuresList
  @extend .list-unstyled
  margin 0
  font-family $ff-emphasis

.featuresList-item
  position relative
  margin ($spacer - .625rem) 0
  margin-left $grid-gutter
  min-height 3rem
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0
  +bp-min(lg)
    &::after
      content ""
      position absolute
      bottom -(($spacer - 0.625rem) / 2) - (0.938rem / 2) // half of item margin bottom - half of the component height
      left (2.813rem / 2) // 50% of icon size
      width .125rem
      height .938rem
      background-color $clr-lighter
    &:last-child
      &::after
        display none


.featuresList-item-link
  display block
  text-align center
  line-height $lh-sm
  color $clr-lighter !important
  +bp-min(lg)
    position absolute
    top 50%
    transform translateY(-50%)
    padding-left 4.063rem // 65px
    text-align left
    +hover-state()
      .featuresList-item-link-icon
        background-color $clr-lighter
        transform: translateY(-50%) scale(0.9)
    &.active
      .featuresList-item-link-icon
        transform: translateY(-50%) scale(1)



.featuresList-item-link-icon
  display none
  +bp-min(lg)
    display block
    position absolute
    top 50%
    left 0
    transform translateY(-50%)
    width 44px  // 45px
    height 44px
    box-shadow: inset 0 0 0 1px $clr-lighter
    border-radius 22px
    fill $clr-lighter
    transition background-color $transition-duration $transition-easing, fill $transition-duration $transition-easing, transform $transition-duration $transition-bounce
    // 0
    svg
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

.featuresList-item-simple
  position relative
  padding-top ($spacer * 2.25)
  margin $spacer 0
  font-family $ff-emphasis
  line-height $lh-sm

.featuresList-item-icon
  position absolute
  top 0
  left 50%
  transform translate(-50%, 0)
  width 96px
  height 96px
  box-shadow: inset 0 0 0 2px $clr-lighter
  border-radius 50%
  fill $clr-lighter

  svg
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.featuresList-screenshots
  position relative

.featuresList-screenshotOutter
  position absolute
  top 0
  left 0
  right 0
  transform translateX(1000px)
  transition transform 1s cubic-bezier(.46,-0.47,.59,1.29)

  .featuresList-screenshot
    box-shadow 0px 0px 35px 0px rgba(0,0,0, 0.3)
    opacity 0
    transition opacity 1.5s $transition-easing

  &.active
    transform translateX(0)

    .featuresList-screenshot
      opacity 1


// Testimonials
//
// Present testimonials with portrait
+bp-max(lg)
  .testimonials-list
    margin-top -($spacer)

.testimonials-list-item
  display table
  margin-top $spacer
  width 100%
  +bp-min(lg)
    margin-top 0

.testimonials-list-item-figure,
.testimonials-list-item-text
  display table-cell
  vertical-align middle

.testimonials-list-item-text
  padding-left .938rem // 15px
  font-family $ff-emphasis
  line-height 1.25
  font-weight $fw-bold
  color: $clr-darker

  div
    padding-top .313rem
    font-family $ff-common
    font-size ($fs-sm - .063rem)
    font-weight $fw-regular
    color: $txt-clr-base


// CTA
//
// Panel with call to action title and button
.landingCTA
  .panel-title
    font-size 26px
    +bp-min(lg)
      max-width 40.625rem // 650px
      font-size ($fs-h2 + .625rem) // 42px